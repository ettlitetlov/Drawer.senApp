

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.axel.drawer.AddGroupFragment"
    android:nestedScrollingEnabled="false">

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SKAPA GRUPP"
        android:id="@+id/createGroup"
        android:layout_alignBottom="@+id/Cancel"
        android:layout_alignEnd="@+id/editText" /> -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:layout_marginTop="75dp"
        android:src="@drawable/add_picture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gruppnamn:"
        android:id="@+id/textView"
        android:textColor="#f06f42"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:hint="T.ex: &quot;Styrelsen&quot;" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medlemmar:"
        android:id="@+id/members"
        android:textColor="#f06f42"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/members"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Beskrivning:"
        android:id="@+id/description"
        android:layout_below="@+id/editText2"
        android:textColor="#f06f42"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/groupDescription"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:minLines="2"
        android:hint="t.ex.  &quot;Vi ska ta över världen&quot;"
        android:maxLines="4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SKAPA"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/createGroup"
            android:nestedScrollingEnabled="false"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#9ecd3a"
            android:layout_marginBottom="10dp"
            android:layout_alignTop="@+id/cancelGroup" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AVBRYT"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:id="@+id/cancelGroup"
            android:background="#f06f42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/createMeeting" />
    </LinearLayout>

</RelativeLayout>


